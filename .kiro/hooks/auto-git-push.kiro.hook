{
  "enabled": true,
  "name": "Auto Git Push on Complete",
  "description": "Automatically commits and pushes changes when agent execution completes",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "git add . && git commit -m \"Auto commit: $(date '+%Y-%m-%d %H:%M:%S')\" && git push origin HEAD"
  }
}