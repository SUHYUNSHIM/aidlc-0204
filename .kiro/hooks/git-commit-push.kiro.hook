{
  "enabled": true,
  "name": "Git Commit and Push",
  "description": "Commits all changes and pushes to current branch when manually triggered",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Execute the following git commands in sequence:\n1. git add .\n2. git commit -m \"Auto commit from Kiro CLI\"\n3. git push origin HEAD\n\nIf any command fails, report the error and stop."
  }
}